{
  "AllowedHosts": "*",
  "LogLevel": {
    "Default": "Information",
    "Microsoft.AspNetCore": "Warning"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/Log.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  },
  "Auth": {
    "ValidAudience": "account",
    "ValidAuthority": "http://keycloak.content-manager.local/realms/ContentManager"
  },
  "Swagger": {
    "Title": "Content Manager WebApi",
    "OAuth": {
      "ClientId": "content_manager",
      "ClientSecret": "",
      "Scopes": [
        "content_manager"
      ]
    }
  },
  "FileStorage": {
    "RootFolder": "file_storage",
    "ImageSettings": {
      "icon": {
        "MaxSize": "36x36"
      },
      "small": {
        "MaxSize": "360x360"
      },
      "medium": {
        "MaxSize": "640x640"
      },
      "large": {
        "MaxSize": "1080x1080"
      },
      "2k": {
        "MaxSize": "2160x2160"
      },
      "4k": {
        "MaxSize": "4320x4320"
      }
    }
  }
}